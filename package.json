{
  "name": "repo-monitor-action",
  "version": "1.7.14",
  "repository": "https://github.com/floric/repo-monitor-action.git",
  "author": "Florian Richter <floririchte@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "release": "npx standard-version",
    "commit": "git add . && npx git-cz --disable-emoji",
    "test": "jest"
  },
  "jest": {
    "forceExit": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "text-summary",
      "json-summary"
    ],
    "setupFiles": [
      "./test/setupTests.ts"
    ],
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.dev.json"
      }
    }
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^4.0.0",
    "@types/react-dom": "^16.9.8",
    "chart.js": "^2.9.3",
    "chartjs-node-canvas": "^3.0.6",
    "dayjs": "^1.8.33",
    "js-yaml": "^3.14.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@testing-library/react": "^10.4.8",
    "@types/chart.js": "^2.9.23",
    "@types/jest": "^26.0.9",
    "@types/js-yaml": "^3.12.5",
    "@types/react": "^16.9.46",
    "jest": "^26.4.0",
    "jest-image-snapshot": "^4.1.0",
    "jsdom-screenshot": "^3.2.0",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  }
}
