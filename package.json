{
  "name": "repo-monitor-action",
  "version": "1.6.6",
  "main": "index.js",
  "repository": "https://github.com/floric/repo-monitor-action.git",
  "author": "Florian Richter <floririchte@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "build-dev": "tsc --project tsconfig.dev.json && node dist/dev.js > dist/index.html",
    "open-dev": "firefox dist/index.html &",
    "release": "npx standard-version",
    "commit": "git add . && npx git-cz --disable-emoji",
    "test": "jest"
  },
  "jest": {
    "forceExit": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "text-summary"
    ],
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.dev.json"
      }
    }
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^4.0.0",
    "@types/react-dom": "^16.9.8",
    "chart.js": "^2.9.3",
    "chartjs-node-canvas": "^3.0.6",
    "dayjs": "^1.8.31",
    "jest": "^26.2.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.23",
    "@types/jest": "^26.0.8",
    "@types/react": "^16.9.44",
    "canvas-prebuilt": "^2.0.0-alpha.14",
    "jest-canvas-mock": "^2.2.0",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  }
}
